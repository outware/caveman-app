<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/property_padding_horizontal"
    android:paddingRight="@dimen/property_padding_horizontal"
    android:paddingTop="@dimen/property_padding_vertical"
    android:paddingBottom="@dimen/property_padding_vertical" >

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:text="@string/name_field"
        tools:ignore="RtlHardcoded" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/name_value_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <EditText
            android:id="@+id/name_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>

</LinearLayout>